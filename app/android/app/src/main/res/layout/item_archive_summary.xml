<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:id="@+id/layout_archive_summary"
    >

    <TextView
        android:id="@+id/archive_date"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/archive_time"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/archive_total_bookings"
        android:layout_toStartOf="@+id/archive_total_bookings"
        android:textColor="@color/greyDisabled"
        android:layout_margin="20dp"
        tools:text="Time" />

    <TextView
        android:id="@+id/archive_total_bookings"
        style="@style/AppTheme.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/checkbox_select_archive"
        android:layout_toStartOf="@+id/checkbox_select_archive"
        android:textColor="@color/greyDisabled"
        android:layout_margin="20dp"
        tools:text="Total bookings" />

    <CheckBox
        android:id="@+id/checkbox_select_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        />

</RelativeLayout>
